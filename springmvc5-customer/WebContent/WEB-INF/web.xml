<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>springmvc5-customer</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
   <servlet>
  <!-- dispatcher은 자신의 설정파일(srpingmvc 설정)을 [servlet-name]-servlet.xml로 찾아서 로딩한다. -->
  <!--  웹컨테이너가 DispatcherServlet을 만들어라 -->
	  <servlet-name>springmvc</servlet-name>
	  <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
	  <load-on-startup>1</load-on-startup> 
	 
  <!-- Serlvet LifeCycle에 의거해서, 어플리케이션 최초 실행 시 객체 생성, init()까지 실행되도록 설정 -->
  <!-- load-on-startup
  	설정이 되어 있으면 어플리케이션 시작 시점에 해당 서블릿을 초기화(init()) 시킨다.
  	만약 아래 설정이 없으면 클라이언트 최초요청시점에 서블릿이 초기화된다.
   -->
  </servlet>
  <!-- SpringMVC의  Front인 DispatcherServlet은 자신의 설정파일(Spring 설정)을 자신의 서블릿 이름 - servlet.xml을 찾도록 되어있다
   -->
  <servlet-mapping>
	  <servlet-name>springmvc</servlet-name>
	  <!-- 클라이언트의 요청 url이 .do로 마치는 요청에 대해서는 모두 DispatcherServlet이 처리한다. -->
	  <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <!-- post방식의 요청에 대해 한글처리 하기 위한 설정 -->
  <filter>
  	<filter-name>EncodingFilter</filter-name>
  	<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
  	<init-param>
  		<param-name>encoding</param-name>
  		<param-value>utf-8</param-value>
  	</init-param>
  </filter>
  
  <filter-mapping>
  	<filter-name>EncodingFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  
  </filter-mapping>
</web-app>