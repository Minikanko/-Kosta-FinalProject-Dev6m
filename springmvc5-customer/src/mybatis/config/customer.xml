<?xml version="1.0" encoding="UTF-8"?>
<!-- Sql Mapper -->
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="customer">
	<sql id="selectSQL">
		select * from spring_customer
	</sql>
	<select id="findCustomerById" resultType="customerVO">
		select * from spring_customer
		where id=#{value}
	</select>
	<select id="findCustomerListByAddress" resultType="customerVO">
		<include refid="selectSQL"></include>
		where address=#{value}
	</select>
	
	<insert id="registerCustomer" parameterType="customervo">
		insert into spring_customer values(#{id},#{name},#{address})
	</insert>
 	
</mapper>